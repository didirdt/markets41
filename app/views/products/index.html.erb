<%= flash_messages %>
<h2>Products List</h2>
<div class="product-block">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="col-md-1">Image</th>
        <th class="col-md-1">Name</th>
        <th class="col-md-1">Price</th>
        <th class="col-md-2">Creator</th>
        <th class="col-md-1">Role</th>        
        <th class="col-md-3">Options</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td class="col-md-1"><%= image_tag (product.upload.url), :style => "border: 1px solid red; height: 35px;" %> </td>
          <td class="col-md-1"><%= product.name %></td>
           <td class="col-md-1">$<%= product.price %></td>
           <td class="col-md-2"><%= product.user.try(:email) %></td>

           <%=   %>
           <td class="col-md-1"><%= product.user.roles.pluck(:name).join(",") %></td>
           
           <td class="col-md-3">
            <%= link_to 'Show', product_path(product), class: "btn btn-info" %>
            <%= link_to 'Edit', edit_product_path(product), class: "btn  btn-warning" %>
            <%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @products %>
</div>
<br>
<%= link_to 'New Product', new_product_path, class: "btn btn-primary" %>